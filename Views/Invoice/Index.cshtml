
@model IEnumerable<Sales.Models.Invoice>
@using Sales.Resources
@{
    ViewBag.Title = @Resource.Invoices;
}

<h2 class="text-primary">@Resource.Invoices</h2>
<hr />


<a href="@Url.Action("Create") " class="btn btn-primary mb-4">
    <i class="icofont-plus"></i>
    <i class="iconfont icon-example"></i>
    @Resource.AddNewInvoice

</a>
<div class="table-responsive">
    <table class="table table-dark table-hover">
        
        <thead>
            <tr>
                <th>@Resource.Invoice </th>
                <th>@Resource.InvoiceDate</th>
                <th>@Resource.Customer</th>
                <th>@Resource.TotalAmount</th>
                <th>@Resource.Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.InvoiceId</td>
                    <td>@invoice.InvoiceDate.ToString()</td>
                    <td>@invoice.Customer.FirstName @invoice.Customer.LastName</td>
                    <td>@invoice.TotalAmount.ToString("C")</td> <!-- عرض المجموع الإجمالي بصيغة العملة -->
                    <td>

                        @Html.ActionLink(@Resource.Details, "Details", new { id = invoice.InvoiceId }, new { @class = "btn btn-primary" })

                    </td>
                </tr>

            }
        </tbody>
    </table>
    </div>

