@model Sales.Models.Category
@using Sales.Resources
@{
    ViewBag.Title = @Resource.Create;
}


<h3 class="text-primary">
    @(Model.CategoryId==0 ? @Resource.AddNewCategory : @Resource.EditCategory)

</h3>

@using (Html.BeginForm("Save", "Category"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CategoryId)

    <div class="mb-3">
        @Html.LabelFor(m => m.Name, Resource.NameCategory)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Description, Resource.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
    </div>



    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">@Resource.Sava</button>
    </div>

}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
