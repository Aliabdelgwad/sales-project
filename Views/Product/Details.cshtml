
@model Sales.Models.Product
@using Sales.Resources
@{
    ViewBag.Title = @Resource.Details;
    //"Details"
}


<ul class="list-group list-group-flush">

    <li class="list-group-item  bg-dark text-white  d-flex justify-content-between align-items-center">
        <span> Product</span>
        @*<a href="@Url.Action("Edit","Product",new {id=Model.ProductId})" class="btn btn-primary">
            <i class="icofont-ul-edit"></i>

        </a>*@
        <a href="@Url.Action("Edit", "Product", new { id = Model.ProductId }) " class="btn btn-primary ">
            @Resource.Edit
        </a>
    </li>

    <li class="list-group-item  ">
        @Model.FullName

    </li>
    <li class="list-group-item">
        @Model.Price

    </li>
    <li class="list-group-item">
        @Model.Category.Name

    </li>

    <li class="list-group-item">
        @Model.AddedOn
    </li>

</ul>